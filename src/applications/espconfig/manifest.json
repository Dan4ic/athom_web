{
  "name" : "ESPConfig",
  "vendor" : "ivanolab",
  "version" : 1,
  "subversion" : 0,
  "patch" : 0,
  "description" : {
    "ru" : "Приложение конфигурирования аппаратной части ESP32",
    "en" : "The application for configuring of ESP32"
  },
  "components" : {
    "espconfig-app" : {
      "source" : "espconfig.js",
      "intent_filter" : [
        {
          "action"    : "smarttank.intent.action.MAIN",
          "category"  : "smarttank.intent.category.LAUNCHER"
        }
      ]
    },
    "espconfig-preferences" : {
      "source" : "prefs.js",
      "intent_filter" : [
        {
          "action"    : "smarttank.intent.action.MAIN",
          "category"  : "smarttank.intent.category.PREFERENCE"
        }
      ]
    }
  },
  "scripts" : {
    "subscriptions" : ["$-started", "espconfig-put"],
    "entry" : "main",
    "modules" : {
      "main": {
        "source": "scripts/main.js",
        "optimize": {}
      }
    }
  }
}